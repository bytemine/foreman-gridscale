<thead>
<tr>
  <th><%= _('Name') %></th>
  <th><%= _('Object Uuid') %></th>
  <th><%= _('Cores') %></th>
  <th><%= _('Memory') %></th>
  <th><%= _('Status') %></th>
</tr>
</thead>
<tbody>
<% @vms.each do |vm| %>
  <tr>
    <td><%= vm.name %></td>
    <td><%= vm.object_uuid %></td>
    <td><%= vm.cores %></td>
    <td><%= vm.memory %> GB</td>
    <td><span <%= vm_power_class(@compute_resource.server_power_status(vm.object_uuid)) %>> <%= @compute_resource.server_power_status(vm.object_uuid) ? "Active" : "Inactive" %></span></td>
  </tr>
<% end %>
</tbody>
